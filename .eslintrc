{
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "ecmaFeatures": {
      "modules": true,
      "spread" : true,
      "restParams" : true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "browser": false,
    "node": true,
    "es6" : true
  },
  "ignorePatterns": [
    "node_modules/"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}